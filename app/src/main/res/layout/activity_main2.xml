<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/play"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="PLAY"
            android:textSize="60sp"
            android:textAllCaps="false"
            android:background="@drawable/gradient_background"
            android:clickable="true"
            android:onClick="startGame"
            />

        <Button
            android:id="@+id/addTruths"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Add Truths"
            android:textSize="60sp"
            android:textAllCaps="false"
            android:background="@drawable/gradient_truth"
            android:clickable="true"
            android:onClick="goToAddTruths"
            />

        <Button
            android:id="@+id/addDares"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Add Dares"
            android:textSize="60sp"
            android:textAllCaps="false"
            android:background="@drawable/gradient_dare"
            android:clickable="true"
            android:onClick="goToAddDares"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>